@section BlindBoxes {
    <link rel="stylesheet" href="~/css/subscription.css" />
    <style>
        .add-to-cart {
            background-color: #1abc9c;
            color: white;
            padding: 15px 0;
            text-align: center;
            border: none;
            font-size: 1.2em;
            border-radius: 8px;
            cursor: pointer;
            margin-bottom: 25px;
            transition: background-color 0.3s ease, box-shadow 0.3s ease;
            width: 100%;
        }

        .bottom-footer {
            background-color: #e5e5e5;
            border-top: 1px solid #ddd;
            padding: 20px 40px;
            margin: 0 -40px;
        }
    </style>
}
@{
    ViewData["Title"] = "BlindBox";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container">
        <span style="display: none">@ViewBag.Username</span>
        <div class="product-image">
            <img src="@ViewBag.ImageUrl"
                 alt="@ViewBag.Name"
                 width="70%" />
        </div>
        <div class="product-details">
            <h2 class="discount">Save 20%</h2>
            <h1 class="product-title">@ViewBag.Name</h1>
            <p class="price">@ViewBag.RawPrice VNĐ</p>

            <form action="@Url.Action("CheckoutBlindBox", "Payment")" method="post">
                <input type="hidden" name="Name" value="@ViewBag.Name" />
                <input type="hidden" name="Price" value="@ViewBag.Price" />
                <input type="hidden" name="ImageUrl" value="@Url.Content("~" + ViewBag.ImageUrl)" />
                <input type="hidden" name="Description" value="@ViewBag.Description" />
                <button class="add-to-cart">
                    Add to Cart
                </button>
            </form>
            <ul class="extra-info">
                <li>
                    <i class="fas fa-tags"></i><strong> Unlock 10% discount for this order</strong>
                </li>
                <li>
                    <i class="fas fa-shield-alt"></i><strong> 30-day satisfaction guarantee</strong>
                </li>
            </ul>
            <details>
                <summary>Description</summary>
                <p>@ViewBag.Description</p>
            </details>
            <details>
                <summary>Gifts?</summary>
                <p>Can be used as a gift.</p>
            </details>
            <details>
                <summary>Our Commitment</summary>
                <p>We offer the best quality products.</p>
            </details>
            <details>
                <summary>Free Shipping</summary>
                <p>Applies to all orders.</p>
            </details>
        </div>
    </div>

    <div class="quiz-section">
        <div class="quiz-content">
            <h1 class="quiz-title">Gift Guide Quiz</h1>
            <p class="quiz-subtitle">
                Bạn muốn mua quà? Chúng tôi sẽ giúp bạn tìm được món quà phù hợp
            </p>
            <ul class="quiz-steps">
                <li> Hãy trả lời 5 câu hỏi nhanh</li>
                <li> Nhận các gợi ý về món quà của bạn</li>
            </ul>
            <button class="quiz-button">
                <a style="text-decoration: none; color: white" href="@Url.Action("Quiz","Quiz")">Take Our Quiz</a>
            </button>
        </div>
        <div class="quiz-image">
            <img src="~/images/blindboxes/blindbox_tinhdau.jpg"
                 alt="Gift Guide Quiz" />
        </div>
    </div>
