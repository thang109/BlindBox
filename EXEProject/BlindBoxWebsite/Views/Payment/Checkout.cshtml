@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/checkout.css" />
    <title>Checkout Page</title>
</head>
<body>
    <div class="checkout-container">
        <div class="checkout-content">
            <div class="contact-shipping-info">
                <form action="/Payment/CreatePaymentUrl" method="post">
                    <h2>Contact information</h2>
                    <input type="email" name="Email" placeholder="Email" required />

                    <h2>Địa chỉ giao hàng</h2>
                    <input type="text" name="FullName" placeholder="Your Name" required />
                    <input type="text" name="City" placeholder="City" required />
                    <input type="text" name="District" placeholder="District" required />
                    <input type="text" name="Address" placeholder="Address" required />
                    <input type="text" name="Phone" placeholder="Phone" required pattern="\d{10,11}" title="Số điện thoại phải là 10-11 chữ số" />

                    <a href="#" class="back-to-cart">← Trở lại giỏ hàng</a>

                    <div class="order-summary">
                        <h2>Order summary</h2>
                        <div class="product-item">
                            <img src="https://www.deeproot.com/wp-content/uploads/stories/Images/ficus%20benjamina%20-%20small.jpg"
                                 alt="Product Image" />
                            <div class="product-details">
                                <p>Easy-Care Subscription (3 Months) × 1</p>
                                <p>$165.00</p>
                                <p>White</p>
                            </div>
                        </div>
                        <a href="#" class="discount-link">Có mã giảm giá? Nhập ngay tại đây ></a>
                        <div class="summary-totals">
                            <p>Tổng cộng: <span>$165.00</span></p>
                            <p>Phí vận chuyển: <span>--</span></p>
                            <p>Thuế: <span>--</span></p>
                            <p class="total-amount">Tổng: <span>VND 165.00</span></p>
                        </div>

                        <input type="hidden" name="Amount" value="16500" />
                        <input type="hidden" name="OrderDescription" value="Easy-Care Subscription (3 Months)" />
                        <input type="hidden" name="OrderType" value="Product Payment" />
                        <input type="hidden" name="BlindBoxId" value="1" />
                        <input type="hidden" name="CreateDate" value="@DateTime.Now" />

                        <button type="submit" class="continue-to-payment-btn" style="color: white">
                            Tiếp tục thanh toán
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
