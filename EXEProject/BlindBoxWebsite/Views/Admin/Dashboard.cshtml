@model BlindBoxWebsite.Models.User

@{
    Layout = "_LayoutAdmin";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="~/css/admin.css" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
</head>
<body>
    <div class="main-content">
        <div class="topbar">
            <input type="search" placeholder="Type to search..." />
            <div class="topbar-icons">
                <a href="#"><i class="fas fa-bell"></i><span class="badge">4</span></a>
                <a href="#" onclick="document.getElementById('logoutForm').submit();"><i class="fas fa-user-circle"></i></a>
                    <form id="logoutForm" method="post" action="/Account/Logout" style="display: none;">
                        <button type="submit" id="logoutButton">Logout</button>
                    </form>
            </div>
        </div>

        <div class="cards">
            <div class="card blue">
                <div class="card-icon">
                    <i class="fas fa-user"></i>
                </div>
                <div class="card-content">
                    <h3>Sign ups</h3>
                    <p>114</p>
                    <small>+25% from last month</small>
                </div>
            </div>
            <div class="card green">
                <div class="card-icon">
                    <i class="fas fa-dollar-sign"></i>
                </div>
                <div class="card-content">
                    <h3>Revenue</h3>
                    <p>$25,541</p>
                    <small>+17.5% from last month</small>
                </div>
            </div>
            <div class="card red">
                <div class="card-icon">
                    <i class="fas fa-phone"></i>
                </div>
                <div class="card-content">
                    <h3>Open tickets</h3>
                    <p>5</p>
                    <small>&nbsp;</small>
                </div>
            </div>
        </div>


        <div class="chart-section">
            <h3>Bar Chart</h3>
            <canvas id="myChart"></canvas>
        </div>

        <div class="notifications">
            <h3>Notifications</h3>
            <ul>
                <li>New comment - 21 days ago</li>
                <li>New comment - 21 days ago</li>
                <li>New comment - 21 days ago</li>
                <li><a href="#">Show all</a></li>
            </ul>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="./admin.js"></script>
</body>
</html>

