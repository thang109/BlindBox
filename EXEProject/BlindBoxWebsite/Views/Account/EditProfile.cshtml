@model BlindBoxWebsite.DTO.AccountDTOs.EditProfileRequest
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Profile - GBOX Store</title>
    <link rel="stylesheet" href="https://unpkg.com/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://unpkg.com/bs-brain@2.0.4/components/password-resets/password-reset-3/assets/css/password-reset-3.css">
    <link href="~/css/editprofile.css" rel="stylesheet" />
    <style>
        .popup-message {
            position: fixed;
            top: 50px;
            right: 20px;
            background-color: #f2f6fc; /* Màu nền thông báo */
            color: black;
            padding: 20px;
            border-radius: 10px;
            z-index: 1000;
            width: 350px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            animation: slideIn 0.5s ease-in-out;
            display: flex; /* Sử dụng Flexbox để đặt logo và nội dung */
            align-items: center;
            justify-content: center;
        }

            .popup-message.error {
                background-color: #dc3545; /* Màu nền cho thông báo lỗi */
            }

            .popup-message .icon {
                font-size: 24px;
                margin-right: 15px;
            }

            .popup-message .message-text {
                flex: 1; /* Cho phần chữ chiếm toàn bộ không gian còn lại */
                text-align: left;
            }

            .popup-message .close-btn {
                margin-left: 10px;
                font-size: 18px;
                cursor: pointer;
                color: black;
            }
    </style>
</head>
<body>
    @if (TempData["UpdateSuccess"] != null)
    {
        <div id="popup-success" class="popup-message">
            <span class="icon">✔️</span>
            <div class="message-text">
                <strong>Thông báo</strong><br />
                @TempData["UpdateSuccess"]
            </div>
            <span class="close-btn" onclick="closePopup('popup-success')">&times;</span>
        </div>
    }
    <div class="container-xl px-4 mt-4">
        <nav class="nav nav-borders">
            <a class="nav-link" href="/" target="__blank">Home</a>
            <a class="nav-link active ms-0" href="https://www.bootdey.com/snippets/view/bs5-edit-profile-account-details" target="__blank">Profile</a>
            <a class="nav-link" href="https://www.bootdey.com/snippets/view/bs5-profile-security-page" target="__blank">Security</a>
            <a class="nav-link" href="https://www.bootdey.com/snippets/view/bs5-edit-notifications-page" target="__blank">Notifications</a>
        </nav>
        <hr class="mt-0 mb-4">
        <div class="row">
            <div class="col-xl-4">
                <div class="card mb-4 mb-xl-0">
                    <div class="card-header">Profile Picture</div>
                    <div class="card-body text-center">
                        <img class="img-account-profile rounded-circle mb-2" src="~/images/Logo2_Website.jpg" alt="">
                        <div class="small font-italic text-muted mb-4">JPG or PNG no larger than 5 MB</div>
                        <button class="btn btn-primary" type="button">Upload new image</button>
                    </div>
                </div>
            </div>
            <div class="col-xl-8">
                <div class="card mb-4">
                    <div class="card-header">Account Details</div>
                    <div class="card-body">
                        <form asp-action="EditProfile" method="post">
                            <div class="mb-3">
                                <label class="small mb-1" for="UserName">Username (how your name will appear to other users on the site)</label>
                                <input class="form-control" asp-for="UserName" type="text" placeholder="Enter your username">
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                            <div class="row gx-3 mb-3">
                                <div class="col-md-12">
                                    <label class="small mb-1" for="FullName">Full name</label>
                                    <input class="form-control" asp-for="FullName" type="text" placeholder="Enter your full name">
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="small mb-1" for="Email">Email address</label>
                                <input class="form-control" asp-for="Email" type="email" placeholder="Enter your email address">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="row gx-3 mb-3">
                                <div class="col-md-6">
                                    <label class="small mb-1" for="PhoneNumber">Phone number</label>
                                    <input class="form-control" asp-for="PhoneNumber" type="tel" placeholder="Enter your phone number">
                                </div>
                                <div class="col-md-6">
                                    <label class="small mb-1" for="Address">Address</label>
                                    <input class="form-control" asp-for="Address" type="text" placeholder="Enter your address">
                                </div>
                            </div>
                            <button class="btn btn-primary" type="submit">Save changes</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/js/account.js"></script>
    <script>
        var errorPopup = document.getElementById('popup-error');
        var successPopup = document.getElementById('popup-success');

        if (errorPopup) {
            errorPopup.style.display = 'flex';
            setTimeout(function () {
                errorPopup.style.display = 'none';
            }, 5000);
        }

        if (successPopup) {
            successPopup.style.display = 'flex';
            setTimeout(function () {
                successPopup.style.display = 'none';
            }, 5000);
        }

        function closePopup(id) {
            document.getElementById(id).style.display = 'none';
        }
    </script>
</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
